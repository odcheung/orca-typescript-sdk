{
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended",
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module",
    },
    "rules": {
        "semi": ["error", "always"],
        "quotes": [2, "single"],
        "@typescript-eslint/no-var-requires": 0,
        "no-constant-condition": [
            "error",
            {
                "checkLoops": false
            }
        ],
        "no-trailing-spaces": "warn",
        "eol-last": "warn"
    }
}
